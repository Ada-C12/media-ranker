<div>
  <% @top_work = @works.sample %>
  <p> Media Spotlight: <%= link_to "#{@top_work.title}", work_path(@top_work.title) %> by <%= @top_work.creator %> </p>
  <p> vote - <%= @top_work.description %> </p>
</div>

<h3> Top Albums </h3>
<table class='table'>
  <tr>
    <th> Votes </th>
    <th> Title </th>
    <th> Created By </th>
    <th> Published </th>
    <th> Upvote </th>
  </tr>

  <% @albums.first(3).each do |album| %>
    <tr>
      <td> <%= album.votes.count %> </td>
      <td> <%= link_to album.title, work_path(album.id) %> </td>
      <td> <%= album.creator %> </td>
      <td> <%= album.publication_year %> </td>
      <td> <%= link_to "Upvote", work_votes_path(album.id), method: :post %> <td>
    </tr>
  <% end %>
</table>

