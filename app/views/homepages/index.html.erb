<main>
<section class="spotlight">
<h2 class="spotlight__header">
<span class="spotlight__header--prefix">Media Spotlight:</span>
<span class="spotlight__link_to">
  <% if @spotlight_winner.id %> 
    <%= link_to @spotlight_winner.title, work_path(id: @spotlight_winner.id) %>
  <% else %>
    NO WINNER
  <% end %>
</span> by <%= @spotlight_winner.creator %>
</h2>
<p class="spotlight__description"> # <%= @spotlight_winner.votes.count %> votes - <%= @spotlight_winner.description %></p>
</section>

<hr class="root__hr">

<section class="top-ten_container">
  <section class="top-ten__list_container">
    <h2 class="top-ten__header">TOP MOVIES</h2>
    <ul class="list-group top-ten__list">
      <% @top_ten_movies.each do |piece| %>
        <li class="list-group-item">
          <h4><%= link_to piece.title, work_path(id: piece.id) %>
          <small class="top-ten__creator">by <%= piece.creator %></small>
          </h4>
          <p># <%= piece.votes.count %> votes</p>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten__list_container">
    <h2 class="top-ten__header">TOP BOOKS</h2>
    <ul class="list-group top-ten__list">
      <% @top_ten_books.each do |piece| %>
        <li class="list-group-item">
          <h4><%= link_to piece.title, work_path(id: piece.id) %>
          <small class="top-ten__creator">by <%= piece.creator %></small>
          </h4>
          <p># <%= piece.votes.count %> votes</p>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten__list_container">
    <h2 class="top-ten__header">TOP ALBUMS</h2>
    <ul class="list-group top-ten__list">
      <% @top_ten_albums.each do |piece| %>
        <li class="list-group-item">
          <h4><%= link_to piece.title, work_path(id: piece.id) %>
          <small class="top-ten__creator">by <%= piece.creator %></small>
          </h4>
          <p># <%= piece.votes.count %> votes</p>
        </li>
      <% end %>
    </ul>
  </section>
</section>
</main>
