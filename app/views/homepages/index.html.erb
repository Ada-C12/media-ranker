<main id="spotlight">
  <% random = @works.sample %>
  <h2>
    Spotlight: <%= link_to Work.spotlight.title, work_path(Work.spotlight.id)%>
    <small>by <%= Work.spotlight.creator %></small>
  </h2>
  <p><%= Work.spotlight.votes.length %> votes - Synopsis: <%= Work.spotlight.description %></p>
</main>
<section class="top-ten">
  <section class="top-category">
    <h2>Top albums</h2>
    <ul>
      <% albums = Work.top_ten("album") %>
      <% albums.each do |album|%>
        <li>
          <h4>
            <%= album.title %>
            <small>by <%= album.creator %></small>
          </h4>
          <p><%= album.votes.length%> votes</p>
        </li>
      <% end %>
    </ul>
  </section>
  <section class="top-category">
    <h2>Top books</h2>
    <ul>
      <% books = Work.top_ten("book") %>
      <% books.each do |book|%>
        <li>
          <h4>
            <%= book.title %>
            <small>by <%= book.creator %></small>
          </h4>
          <p><%= book.votes.length%> votes</p>
        </li>
      <% end %>
    </ul>
  </section>
  <section class="top-category">
    <h2>Top movies</h2>
    <ul>
      <% movies = Work.top_ten("movie") %>
      <% movies.each do |movie|%>
        <li>
          <h4>
            <%= movie.title %>
            <small>by <%= movie.creator %></small>
          </h4>
          <p><%= movie.votes.length%> votes</p>
        </li>
      <% end %>
    </ul>
  </section>
</section>
