<section class="spotlight">
<h2 class="spotlight_header">
<span class="spotlight__header--prefix">
Media Spotlight:
</span>
<a class="spotlight__link-to" </section>
<% chosen = @works.sample %>
<%= link_to chosen.title, work_path(chosen) %>
(<%= chosen.category %>)
</a>
by
<%= chosen.creator %>
</h2>
<span class="badge badge-pill badge-success"><%=chosen.votes.length%>
<% if chosen.votes.length == 1 %>Vote</span>
<% else %>Votes</span>
<%end%>
<section class="top-ten__container">
  <section class="top-ten__list-container">
  <h2 class="top-ten__header"> Top Books: </h2>
<ul>
<% chosen = @works.where(category: "book") %>
<% chosen = Work.top_ten(chosen) %>
<% chosen.each do |book| %>
<li> <%= link_to book.title, work_path(book) %>
by
<%= book.creator %>
<span class="badge badge-pill badge-info"><%=book.votes.length%>
<% if book.votes.length == 1 %>Vote</span>
<% else %>Votes</span>
<%end%>Votes</span>
</li>
<% end %>
</ul>
</section>
<section class="top-ten__list-container">
  <h2 class="top-ten__header"> Top Music Albums: </h2>
<ul>
<% chosen = @works.where(category: "album") %>
<% chosen = Work.top_ten(chosen)%>
<% chosen.each do |album| %>
<li> <%= link_to album.title, work_path(album) %>
by
<%= album.creator %>
<span class="badge badge-pill badge-info"><%=album.votes.length%>
<% if album.votes.length == 1 %>Vote</span>
<% else %>Votes</span>
<%end%>Votes</span>
</li>
<% end %>
</ul>
</section>
<section class="top-ten__list-container">
<h2 class="top-ten__header"> Top Movies: </h2>
<ul>
<% chosen = @works.where(category: "movie") %>
<% chosen = Work.top_ten(chosen)%>
<% chosen.each do |movie| %>
<li> <%= link_to movie.title, work_path(movie) %>
by
<%= movie.creator %>
<span class="badge badge-pill badge-info"><%=movie.votes.length%>
<% if movie.votes.length == 1 %>Vote</span>
<% else %>Votes</span>
<%end%> Votes</span>
</li>
<% end %>
</ul>
</section>
</section>
