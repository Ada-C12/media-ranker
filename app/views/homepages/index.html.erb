<section class="spotlight">
<h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>
      <a class="spotlight__link-to" href="#"><%= @spotlight.title%></a> by <%= @spotlight.creator %>
    </h2>
    <p class="spotlight__description">
      <%= @spotlight.description %>
    </p>
    </section>

<section class="top-ten_container">
  <section class="top-ten_list-container">
    <h2 class="top-ten_header">Top Movies</h2>

<ul>
  <% @top_movies.each do |work|  %>
    <li>
      <%= link_to work.title, work_path(work) %>
      By: <%= work.creator %> 
    </li>
  <% end %>
</ul>
</section>
</section>

