
  <main>
    <section class="spotlight">
      <h2 class="spotlight__header">
        <span class="spotlight__header--prefix">Media Spotlight</span>
        <a class="spotlight__link-to" href="/works/402">To Thrill a Mockingbird</a> by Harper Leeee
      </h2>
      <p class="spotlight__description">
        4 votes - brand new
      </p>
    </section>

    <hr class="root__hr">

    <section class="top-ten__container">
      <section class="top-ten__list-container">
        <h2 class="top-ten__header">Top Movies</h2>
        <ul class="list-group top-ten__list">
          <% Work.top_ten("movie").each do |movie| %> 
           <li class="list-group-item">
            <h4>
              <%= link_to movie.title, work_path(movie.id) %>
              <small> by <%= movie.creator %> </small>
            </h4>
            <p>
              movie.votes.count votes
            </p>
           </li>
          <% end %>
        </ul>
      <!-- <a href="/works.movies">View More Movies</a> -->
      </section>

      <section class="top-ten__list-container">
        <h2 class="top-ten__header">Top Books</h2>
        <ul class="list-group top-ten__list">
           <% Work.top_ten("book").each do |book| %> 
           <li class="list-group-item">
            <h4>
              <%= link_to book.title, work_path(book.id) %>
              <small> by <%= book.creator %> </small>
            </h4>
            <p>
              book.votes.count votes
            </p>
           </li>
          <% end %>
        </ul>
        <!-- <a href="/works.books">View More Books</a> -->
      </section>

      <section class="top-ten__list-container">
        <h2 class="top-ten__header">Top Albums</h2>
        <ul class="list-group top-ten__list">
           <% Work.top_ten("album").each do |album| %> 
           <li class="list-group-item">
            <h4>
              <%= link_to album.title, work_path(album.id) %>
              <small> by <%= album.creator %> </small>
            </h4>
            <p>
              album.votes.count votes
            </p>
           </li>
          <% end %>
        </ul>
        <!-- <a href="/works.albums">View More Albums</a> -->
      </section>
    </section>
  </main>

