<main>
  <section class="spotlight">
    <% spotlight = Work.spotlight%>

    <h2 class="spotlight__header" >
      <span class="spotlight__header--prefix"> Media Spotlight: </span> 
      <%= link_to spotlight.title, work_path(spotlight), class: "spotlight__link-to" %> by <%= spotlight.creator %></h2>

    <h3 class="spotlight__description"> <%= spotlight.votes.count %> Votes - <%= spotlight.description %> </h3>

  </section>
  <hr class="root__hr">

  <section class="top-ten__container">

    <section class="top-ten__list-container">
      <h2 class="top-ten__header"> Top Albums </h2>
      <ul class="list-group top-ten__list">
        <% albums = Work.top_ten("album") %>
        <% if albums == [] %>
          <p> There are no works in this category </p>
        <% else %>
          <% albums.each do |album| %>
            <li class="list-group-item">
              <h4> <%= link_to album.title, work_path(album) %> 
              <small class="top-ten__creator"> by <%= album.creator%> </small> </h4>
              <p> <%= album.votes.count %> Votes </p>
            </li>  
          <% end %>
        <% end %>
      </ul>
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header"> Top Books </h2>
      <ul class="list-group top-ten__list">
        <% books = Work.top_ten("book") %>
        <% if books == [] %>
          <p> There are no works in this category </p>
        <% else %>
          <% books.each do |book| %>
            <li class="list-group-item">
              <h4> <%= link_to book.title, work_path(book) %> 
              <small class="top-ten__creator"> by <%= book.creator%> </small> </h4>
              <p> <%= book.votes.count %> Votes </p>
            </li>  
          <% end %>
        <% end %>
      </ul>
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header"> Top Movies </h2>
      <ul class="list-group top-ten__list">
        <% movies = Work.top_ten("movie") %>
        <% if movies == [] %>
          <p> There are no works in this category </p>
        <% else %>
          <% movies.each do |movie| %>
            <li class="list-group-item">
              <h4> <%= link_to movie.title, work_path(movie) %> 
             <small class="top-ten__creator"> by <%= movie.creator%> </small> </h4>
              <p> <%= movie.votes.count %> Votes </p>
            </li>  
          <% end %>
        <% end %>
      </ul>
    </section>
  </section>

</main>