<main>
  <section class="spotlight">
    <h2 class="spotlight header">
      <span class="spotlight header--prefix">Media Spotlight</span>
      <%= link_to @spotlight.title, work_path(@spotlight.id) %>
      by <%= @spotlight.creator %>
    </h2>
    <p class="spotlight description">VOTES - brand new</p>
  </section>

  <hr class="root hr">

  <section class="top-ten container">
    <section class="top-ten list-container">
      <h2 class="top-ten header">Top Movies</h2>
      <ul class="list-group top-ten list">
        <% if @top_ten_movies %>
          <% @top_ten_movies.each do |movie| %>
            <li class="list-group-item">
              <h4>
                <%= link_to movie.title, work_path(movie.id)%>
                <small class="top-ten creator">by <%=movie.creator%> </small>
              </h4>
              <p>VOTES</p>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item">No movies have been added yet</li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten list-container">
      <h2 class="top-ten header">Top Books</h2>
      <ul class="list-group top-ten list">
        <% if @top_ten_books %>
          <% @top_ten_books.each do |book| %>
            <li class="list-group-item">
              <h4>
                <%= link_to book.title, work_path(book.id)%>
                <small class="top-ten creator">by <%=book.creator%> </small>
              </h4>
              <p>VOTES</p>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item">No albums have been added yet</li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten list-container">
      <h2 class="top-ten header">Top Albums</h2>
      <ul class="list-group top-ten list">
        <% if @top_ten_albums %>
          <% @top_ten_albums.each do |album| %>
            <li class="list-group-item">
              <h4>
                <%= link_to album.title, work_path(album.id)%>
                <small class="top-ten creator">by <%=album.creator%> </small>
              </h4>
              <p>VOTES</p>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item">No albums have been added yet</li>
        <% end %>
      </ul>
    </section>
  </section>
</main>
