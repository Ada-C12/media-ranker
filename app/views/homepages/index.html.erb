<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<main>
<section class="media_spotlight">
<h2>Media Spotlight</h2>
<span>Title: <% feature = Work.spotlight%>
 <%= link_to feature.title, work_path(feature.id) %> <br>Creator: <%= feature.creator%>
 <p><%= feature.votes.count %> votes</p>
</span>
</section>

<section>
<h2>Top Movies</h2>
<div>
<% movies = @works.top_category("movie") %>
    <% movies.each do |work|%>
    <p><%= link_to work.title, work_path(work.id)%> by <%= work.creator%></p>
    <p><%= work.votes.count %> votes</p>
    <br>
    <% end %>
</div>
</section>

<section>
<h2>Top Books</h2>
<div>
  <% books = @works.top_category("book") %>
    <% books.each do |work| %>
    <p><%= link_to work.title, work_path(work.id)%> by <%= work.creator%></p>
    <p><%= work.votes.count %> votes</p>
    <br>
    <% end %>
</div>
</section>

<section>
<h2>Top Albums</h2>
<div>
  <% albums = @works.top_category("album")%>
  <% albums.each do |work| %>
    <p><%= link_to work.title, work_path(work.id)%> by <%= work.creator%></p>
    <p> <%= work.votes.count %> votes</p>
    <br>
  <% end %>
</div>
</section>

</main>
</body>