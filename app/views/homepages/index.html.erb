<section class="spotlight">
  <h2 class="spotlight__header">
    <span class="spotlight__header--prefix"> Media Spotlight</span> 
    <%= link_to @spotlight_work.title.capitalize, work_path(@spotlight_work.id), class: "spotlight__link-to"%> 
    by <%=@spotlight_work.creator%>
  </h2>
  <p><%=@spotlight_work.votes.length%> votes - <%=@spotlight_work.description%></p>
</section>
<hr class="root__hr">
<section class="top-ten__container">
  <section class="top-ten__list-container">
    <h3 class="top-ten__header">Top Movies</h3>
    <ul class="list-group top-ten__list">
      <%@top_movies.each do |movie|%>
        <li class="list-group-item">
          <h4><%=link_to movie.title, work_path(movie.id)%> 
          <small class="top-ten__creator"> by <%=movie.creator%></small>
          <p><%=movie.votes.count%> votes</p>
          </h4>
        </li>
      <%end%>
    </ul>
  </section>

  <section class="top-ten__list-container">
    <h3 class="top-ten__header">Top Books</h3>
    <ul class="list-group top-ten__list">
      <%@top_books.each do |book|%>
        <li class="list-group-item">
          <h4><%=link_to book.title, work_path(book.id)%> 
          <small class="top-ten__creator"> by <%=book.creator%></small>
          <p><%=book.votes.count%> votes</p>
          </h4>
        </li>
      <%end%>
    </ul>
  </section>

  <section class="top-ten__list-container">
    <h3 class="top-ten__header">Top Albums</h3>
    <ul class="list-group top-ten__list">
      <%@top_albums.each do |album|%>
        <li class="list-group-item">
          <h4><%=link_to album.title, work_path(album.id)%> 
          <small class="top-ten__creator"> by <%=album.creator%></small>
          <p><%=album.votes.count%> votes</p>
          </h4>
        </li>
      <%end%>
    </ul>
  </section>
</section>
