<main>
<section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>

      <%= link_to @spotlight.title, work_path(@spotlight.id), class: "spotlight__link-to"%>
    </h2>

    <p class="spotlight__description"> <%= @spotlight.votes.length %>  Votes </p>
  </section>

<hr class="root__hr">

<section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Books
  </h2>
  <ul class="list-group top-ten__list">
      <li class="list-group-item">
      <% @books_top_ten.each do |book| %>
        <h4><%= link_to book.title, work_path(book.id)%>  
        <small class="top-ten__creator">by <%= book.creator %> </small>
        </h4>
        <p><%= book.votes.length%> votes</p>
        <% end%>
      </li>
  </ul>
  <!-- <a href="/works.movies">View More Movies</a> -->
</section>

<section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Albums
  </h2>
  <ul class="list-group top-ten__list">
      <li class="list-group-item">
        <% @albums_top_ten.each do |album| %>
        <h4>
          <%= link_to album.title, work_path(album.id)%> 
          <small class="top-ten__creator">by <%= album.creator %> </small>
        </h4>
        <p><%= album.votes.length%> votes</p>
        <% end%>
      </li>    
  </ul>
  <!-- <a href="/works.books">View More Books</a> -->
</section>

<section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Movies
  </h2>
  <ul class="list-group top-ten__list">
      <li class="list-group-item">
        <% @movies_top_ten.each do |movie| %>
        <h4>
          <%= link_to movie.title, work_path(movie.id)%> 
          <small class="top-ten__creator">by <%= movie.creator %> </small>
        </h4>
        <p><%= movie.votes.length%> votes</p>
        <% end%>
      </li>    
  
  </ul>
  <!-- <a href="/works.albums">View More Albums</a> -->
</section>
</main>