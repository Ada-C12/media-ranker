<main>
  <h1>My homepage with a picture of Tofu</h1>
  <h2>Media Spotlight: <%=@spotlight_work.title.capitalize%> by <%=@spotlight_work.creator%></h2>
  <p><%=@spotlight_work.votes.length%> votes - <%=@spotlight_work.description%></p>
  
  <h3>Top Albums</h3>
  <ul>
    <%@top_albums.each do |album|%>
      <li><%=link_to album.title, work_path(album.id)%> --- <%=album.creator%> -- <%=album.publication_year%></li>
    <%end%>
  </ul>


  <h3>Top Books</h3>
  <ul>
    <%@top_books.each do |book|%>
      <li><%=link_to book.title, work_path(book.id)%> --- <%=book.creator%> -- <%=book.publication_year%></li>
    <%end%>
  </ul>


  <h3>Top Movies</h3>
  <ul>
    <%@top_movies.each do |movie|%>
      <li><%=link_to movie.title, work_path(movie.id)%> --- <%=movie.creator%> -- <%=movie.publication_year%></li>
    <%end%>
  </ul>

</main>
