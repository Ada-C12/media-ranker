<main>
  <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>
      <% if @spotlight %>
        <%= link_to @spotlight.title, work_path(@spotlight.id), class: "spotlight__link-to" %>
        by <%= @spotlight.creator %>
      <% else %>
        <p>No media have been added yet</p>
      <% end %>
    </h2>
    <p class="spotlight__description">VOTES - brand new</p>
  </section>

  <hr class="root__hr">

  <section class="top-ten__container">
    <section class="top-ten__list-container">
      <h2 class="top-ten__header">Top Movies</h2>
      <ul class="list-group top-ten__list">
        <% @top_ten_movies.each do |movie| %>
          <li class="list-group-item">
            <h4>
              <%= link_to movie.title, work_path(movie.id)%>
              <small class="top-ten__creator">by <%=movie.creator%> </small>
            </h4>
            <p>VOTES</p>
          </li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header">Top Books</h2>
      <ul class="list-group top-ten__list">
        <% @top_ten_books.each do |book| %>
          <li class="list-group-item">
            <h4>
              <%= link_to book.title, work_path(book.id)%>
              <small class="top-ten__creator">by <%=book.creator%> </small>
            </h4>
            <p>VOTES</p>
          </li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header">Top Albums</h2>
      <ul class="list-group top-ten__list">
        <% @top_ten_albums.each do |album| %>
          <li class="list-group-item">
            <h4>
              <%= link_to album.title, work_path(album.id)%>
              <small class="top-ten__creator">by <%=album.creator%> </small>
            </h4>
            <p>VOTES</p>
          </li>
        <% end %>
      </ul>
    </section>
  </section>
</main>
