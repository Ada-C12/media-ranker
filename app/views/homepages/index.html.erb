<body>

  <main>
    <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>
      <%= link_to Work.spotlight.title, work_path(Work.spotlight.id), class:"spotlight__link-to"%>
      by <%= Work.spotlight.creator %>
    </h2>
    <p class="spotlight__description">
      <%= Work.spotlight.votes.count%> Vote - <%= Work.spotlight.description %>
    </p>
    </section>

    <hr class="root__hr">

    <section class="top-ten__container">
      <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Movies
      </h2>
      <ul class="list-group top-ten__list">
        <% Work.top_ten("movie").each do |work|%>
          <li class="list-group-item">
            <h4>
              <%= link_to work.title, work_path(work.id)%>
              <small class="top-ten__creator">by <%= work.creator%></small>
            </h4>
            <p><%= work.votes.count %> votes</p>
          </li>
        <% end %>
      </ul>
      <!-- <a href="/works.movies">View More Movies</a> -->
      </section>
    

      <section class="top-ten__list-container">
        <h2 class="top-ten__header">Top Books</h2>
        <ul class="list-group top-ten__list"></ul>
        <ul class="list-group top-ten__list">
        <% Work.top_ten("book").each do |work|%>
          <li class="list-group-item">
            <h4>
              <%= link_to work.title, work_path(work.id)%>
              <small class="top-ten__creator">by <%= work.creator%></small>
            </h4>
            <p><%= work.votes.count %> votes</p>
          </li>
        <% end %>
        </ul>
        <!-- <a href="/works.books">View More Books</a> -->
      </section>

      <section class="top-ten__list-container">
        <h2 class="top-ten__header">Top Albums</h2>
        <ul class="list-group top-ten__list"></ul>
        <ul class="list-group top-ten__list">
        <% Work.top_ten("album").each do |work|%>
          <li class="list-group-item">
            <h4>
              <%= link_to work.title, work_path(work.id)%>
              <small class="top-ten__creator">by <%= work.creator%></small>
            </h4>
            <p><%= work.votes.count%> votes</p>
          </li>
        <% end %>
        </ul>
        <!-- <a href="/works.albums">View More Albums</a> -->
      </section>
      
    </section>

  </main>

</body>