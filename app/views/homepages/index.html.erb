<main>  
  <section class="spotlight">
    <h2 class="spotlight__header">
    <span class="spotlight__header--prefix">
      Media spotlight:
    </span>
    <%= link_to @spotlight.title, work_path(@spotlight), class: "spotlight__link-to"%> by <%=@spotlight.creator%> </h2>
    <h3 class="spotlight__description"> <%=@spotlight.votes.size%> votes - <%= @spotlight.description%></h3>
</section>

<hr class="root__hr">

  <section class="top-ten__container">

      <section class="top-ten__list-container">
        <h2 class="top-ten__header"> Top Movies</h2>
          <ul class="list-group top-ten__list">
          <% @movies.each do |work| %>
            <li class="list-group-item">
              <h4> <%= link_to work.title, work_path(work) %> 
              <small class="top-ten__creator"> by <%= work.creator %></small></h4>
              <p><%= work.votes.size %> votes </p>
            </li>
        <% end %>
        </ul>
    </section>

    <section class="top-ten__list-container">
        <h2 class="top-ten__header"> Top Books</h2>
          <ul class="list-group top-ten__list">
          <% @books.each do |work| %>
            <li class="list-group-item">
              <h4> <%= link_to work.title, work_path(work) %> 
              <small class="top-ten__creator"> by <%= work.creator %></small></h4>
              <p><%= work.votes.size %> votes </p>
            </li>
        <% end %>
        </ul>
    </section>

    <section class="top-ten__list-container">
        <h2 class="top-ten__header"> Top Albums</h2>
          <ul class="list-group top-ten__list">
          <% @albums.each do |work| %>
            <li class="list-group-item">
              <h4> <%= link_to work.title, work_path(work) %> 
              <small class="top-ten__creator"> by <%= work.creator %></small></h4>
              <p><%= work.votes.size %> votes </p>
            </li>
        <% end %>
        </ul>
    </section>


  </section>
</main>

