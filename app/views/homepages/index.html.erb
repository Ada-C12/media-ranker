  </section>

  <section>
    <h2 class="top-ten__header">Albums</h2>
    <%= render partial: "list_works", locals: { works: @albums} %>
  </section>

  <section>
    <h2 class="top-ten__header">Movies</h2>
    <%= render partial: "list_works", locals: { works: @movies} %>
  </section>
  </section>
