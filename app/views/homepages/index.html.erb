<section class="spotlight">
<h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>
      <a class="spotlight__link-to" href="/works/<%= @spotlight[0].id %>">
      <%=@spotlight[0].title%></a> by <%= @spotlight[0].creator %>

    </h2>
    <p class="spotlight__description">
      <%= @spotlight[0].description %>
    </p>
    </section>

<section class="top-ten_container">
<section class="top-ten_list-container">
<h2 class="top-ten_header">Top Movies</h2>

<ul class="list-group top-ten__list">
  <% @top_movies.each do |work|  %>
    <li class="list-group-item">
    <h4>
      <%= link_to work.title, work_path(work) %> 
      <small class="top-ten__creator">
      by <%= work.creator %> </small></h4>
    <p><%= work.votes.count%> votes </p>
    </li>
  <% end %>
</ul>
</section>
</section>

