<section class="spotlight"> 
  <h2 class="spotlight__header">Media Spotlight: 
    <%= link_to "#{Work.media_spotlight.title} by #{Work.media_spotlight.creator}"%></h2>
  <p class="spotlight__description"> <%= Work.media_spotlight.votes.count %> votes - <%= Work.media_spotlight.description %> </p>
</section>

<hr class="root__hr">


<section class="top-ten__container">
  <section>
    <h2 class="top-ten__header">Books</h2>
