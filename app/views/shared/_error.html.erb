<% if object.errors.any? %>
  <section class="alert alert-warning">
    <span>A problem occurred:</span>
    <ul>
      <% object.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
    </section>
<% end %>