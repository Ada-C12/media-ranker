<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section>
      <header>
        <h1> Media Ranker </h1>
      </header>
      <p>Ranking the Best of Everything</p>
    </section>
    <nav>
      <ul class="nav-links">
        <li class="home-link">
          <%= link_to "View top media", root_path %>
        </li>
        <li class="works-link">
          <%= link_to "View all media", works_path %>
        </li>
        <li class="add-work">
          <%= link_to "Add a new work", new_work_path %>
        </li>
        <li class="users-link">
          <%= link_to "View all users" %>
        </li>
      </ul>
    </nav>

    <%= yield %>
  </body>
</html>
