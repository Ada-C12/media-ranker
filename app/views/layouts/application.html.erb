<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>




    <section class="flash" >
      <% flash.each do |name, message| %>
        <%= message %>
      <% end %>
    </section>

    <nav>
      <ul>
        <li><%= link_to "View top media", root_path %></li>
        <li><%= link_to "View all media", works_path %></li>
        <li><%= link_to "Add a new work", new_work_path %></li>
        <li><%= link_to "View all users", users_path %></li>
        <% if @current_user != nil %>
          <li>Logged in as <%= @current_user.username %> </li>
          <li><%= link_to "Logout", logout_path, method: :post %></li>
        <% else %>
          <li><%= link_to "Login", login_path %></li>        
        <% end %>
      </ul>
    </nav>

    <%= yield %>

  </body>
</html>
