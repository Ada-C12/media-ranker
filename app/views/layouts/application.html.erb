<!DOCTYPE html>
<html>
  <head>
    <title>Natalie's Media Ranker 2.0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="app-header__header">
    <h1>
    <%=link_to "Media Ranker", root_path %>
    <small>Ranking the Best of Everything</small>
    </h1>
      <nav class="app-header__nav">
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item"><%= link_to "View top media", root_path, class:"nav-link" %></li>
          <li class="nav-item app-header__nav_item"><%= link_to "Add New Media", new_work_path, class:"nav-link" %></li>
          <li class="nav-item app-header__nav_item"><%= link_to "View All Media", works_path, class:"nav-link" %></li>
          <li class="nav-item app-header__nav_item"><%= link_to "View all Users", users_path, class:"nav-link" %></li>
        </ul>

        <ul class="nav app-header__user-nav-container">
          <% if @current_user %>
          <ul class="nav app-header__user-nav-container">
            <li class="nav-item app-header__nav_item">
              <%= link_to "Logged in as #{@current_user.username}", class:"btn btn-primary" %>
            </li>
            <li class="nav-item app-header__nav_item"><%= link_to "Log out", logout_path, method: :post, class:"btn btn-primary"%> </li>
          </ul>
          <% else %>
            <li class="btn btn-primary"><%= link_to "Log In", login_path %> </li>
          <% end %>
        </ul>
      </nav>
    </header >

    <section class="flash">
    <% flash.each do |name, message| %>
        <div class="alert alert-<%= name %>"> <%= message %></div>
      <% end %>
    </section>

    <section>
      <%= yield %>
    </section>

  </body>
</html>
