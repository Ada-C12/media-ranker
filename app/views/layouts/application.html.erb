<!DOCTYPE html>
<html>
  <head>
    <title>Media Ranker 2.0</title>
 
    <%= csrf_meta_tags %>
    <%= csp_meta_tag  %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  
  </head>
<body>
  <header class="app-header__header">
    <h1>
      <%= link_to "Media Ranker", root_path %>
      <small>Ranking the Best of Everything</small>
    </h1>

    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
          <%= link_to "View top media", root_path %>
        </li>


        <li class="nav-item app-header__nav_item">
          <%= link_to "View all media", root_path %>
        </li>

        <li class="nav-item app-header__nav_item">
          <%# <a class="nav-link" href="/works/new">Add a new work</a> %>
          <%= link_to "Add a new work", root_path %>
        </li>

        <li class="nav-item app-header__nav_item">
          <%= link_to "View all users", root_path %>
        </li>

      </ul>
      <ul class="nav app-header__user-nav-container">

        <li class="nav-item app-header__nav_item">
          <%= link_to "Log in", root_path, class:"btn btn-primary"%>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "Log out" , root_path, class:"btn btn-primary"%>
          <%# <a class="btn btn-primary" rel="nofollow" data-method="post" href="/logout">Log Out</a> %>
        </li>

      </ul>
    </nav>
  </header>

    <%= yield %>

</body>
  
</html>
