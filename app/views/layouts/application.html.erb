<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>
        <%= link_to "Media Ranker", root_path %>
        <small>Ranking the Best of Everything</small>
      </h1>
      <nav>
        <ul class="nav">
          <li>
            <%= link_to "View top media", root_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "View all media", works_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "Add a new work", new_work_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "View all users", works_path, class: "nav-link" %>
          </li>        
        </ul>
        <ul class="nav">
          <li>
            <%= link_to "Logout", works_path, class: "btn btn-primary" %>
          </li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
