<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <section class="flash">
    <% flash.each do |name, message| %>
      <div class="<%= name %>"><%= message %></div>
    <% end %>
  </section>
  <header>
    

       
  <nav class="nav">
  <div>
    <h1><%= link_to "MediaRanker", root_path%></h1>
    <%= link_to "View top media", root_path%>
    <%= link_to "View all media", works_path%>
    <%= link_to "Add a new work", new_work_path%>
    <%# <%= link_to "View all users", users_path %> 
    <% if session[:user_id].nil? %>
            <%= link_to "Login", login_path %>
        <%else%>
          <li>
            <%= link_to "Logout", logout_path, method: :post %>
          </li>
          <li>
            Logged in as <%= User.find_by(id: session[:user_id]).username %>
          </li>
        <%end%>
     
      </header> 
    <%= yield %>




  </body>
</html>
