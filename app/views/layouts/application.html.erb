<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
    <header>
      <h1>Welcome to Media Ranker</h1>
    </header>
    <div>
      <ul>
        <li>
          <%= link_to "New Media", new_work_path %>
        </li>
        <li>
          <%= link_to "All Media", works_path %>
        </li>

                <% if session[:user_id].nil? %>
          <li>
            <%= link_to "Login", login_path %>
          </li>
        <%else%>
          <li>
            <%= link_to "Logout", logout_path, method: :post %>
          </li>
          <li>
            Logged in as <%= User.find_by(id: session[:user_id]).username %>
          </li>
        <%end%>
    </div>
    <section class="flash">
    <% flash.each do |name, message| %>
      <div class="alert alert-<%= name %>"><%= message %></div>
    <% end %>
  </section>

    </div>
    <%= yield %>
  </body>
</html>





