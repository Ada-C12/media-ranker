<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    
      <section>
        <h1> Media Ranker | Ranking the Best of Everything </h1>
        <%= link_to "Top Works", root_path %>
        <%= link_to "All Works", works_path %>
        <%= link_to "Create a New Work", new_work_path %>
        <%= link_to "All Users", users_path %>
      </section>

      <section class="login_logout">
        <% if session[:user_id] == nil %>
          <%= link_to "Login", login_path %>
        <% else %>
          <%= link_to "Logout", logout_path, method: :post %>
          <%= link_to "Current User: #{User.find_by(id: session[:user_id]).name}", user_path(User.find_by(id: session[:user_id]).id) %>
        <% end %>
      </section>
    </nav>


    <section class="flash">
      <% flash.each do |name, message| %>
        <div class="<%= name %>"><%= message %></div>
      <% end %>
    </section>

    <%= yield %>

  </body>
</html>
