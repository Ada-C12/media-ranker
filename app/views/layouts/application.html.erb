<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Gudea&display=swap" rel="stylesheet">
  </head>

  <body>
    <section style="background-color: #B2DFDB">
    <h2 class="toptitle font-weight-bold"><%= link_to "Media Ranker", main_path %> Ranking the Best of Everything</h2>
      <nav class="navbar navbar-expand-lg navbar-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "View top media", main_path %></li>
            </li>
            <li class="nav-item">
              <%= link_to "View all media", works_path %>
            </li>
            <li class="nav-item">
              <%= link_to " Add a new work", new_work_path %>
            </li>
            <li class="nav-item">
              <%= link_to "View all users", users_path %>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            
            <% if @current_user.nil? %>
              <li>
                <button type="button" class="btn btn-primary"><li><%= link_to "Log In", login_path %></li></button>
              </li>
            <%else%>
              <li>
                <button type="button" class="btn btn-primary"><li><%= link_to "Logged in as #{@current_user.username}", user_path(@current_user) %></li></button>
              </li>
              <li>
                <button type="button" class="btn btn-primary"><li><%= link_to "Logout", logout_path, method: :post %></li></button>
              </li>
          <%end%>

          </ul>
        </div>
      </nav>
    </section>

    <section class="flash">
      <% flash.each do |name, message| %>
        <div class="alert alert-<%= name %>"><%= message %></div>
      <% end %>
    </section>

    <%= yield %>
  </body>
</html>