<main>
  <h2 class="green_text">List of Users</h2>

  <table class="table">
    <thead>
      <tr>
        <th class="wide-column">USERNAME</th>
        <th>VOTES</th>
        <th>JOINED</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td class="wide-column"><%= link_to user.name, user_path(id: user.id) %></td>
        <td><%= user.votes.count %></td>
        <td><%= display_date(user.created_at) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <a class="btn btn-secondary" href="/">Back to Media List</a>
</main>
