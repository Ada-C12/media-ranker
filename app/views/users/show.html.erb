<html>
    <main>
      <section>
        <h2>User Summary: <%= @user.username %></h2>
        <p>Joined site <%= @user.created_at.year %></p>
      </section>

    <section class="works-votes__container">
      <h3 class="users-votes__header">Votes</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Media Title</th>
            <th>Created By</th>
            <th>Published</th>
            <th>Category</th>
            <th>Voted On</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% works_array = [:album, :book, :movie] %>
            <% works_array.each do |category|%>
              <% works = Work.where(category: category)%>
                <% works.each do |work| %>
                <tr>
                  <td>
                    Num
                  </td>
                  <td>
                    <%= link_to work.title, work_path(id: work.id) %> 
                  </td>
                  <td>
                    <%= work.creator %>
                  </td>
                  <td>
                    <%= work.publication_year%>
                  </td>
                  <td>
                    <a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/406/upvote">Upvote</a>
                  </td>
                <% end %>
              <% end %>
          </tr>
        </tbody>
      </table>
    </section>
  <a class="btn btn-secondary" href="/">View top media</a>
  <a class="btn btn-primary" href="/works/new">Add a new work</a>
    </main>
  </body>
</html>