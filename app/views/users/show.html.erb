<h2>User Summary: <%= @user.username %></h2>
<p>Joined site <%= @user.created_at %></p>

<h3>Votes</h3>
<table>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>

  <% @user.votes.each do |vote| %>
   <tr>
    <td><%= link_to vote.work.title, work_path(vote.work.id) %></td>
    <td><%= vote.work.creator %></td>
    <td><%= vote.work.publication_year %></td>
    <td><%= vote.work.category %></td>
    <td><%= vote.created_at %></td>
    </tr>
  <% end %>
</table>
<%= link_to "See all Users", users_path, class: "btn btn-secondary" %> 
<%= link_to "Back to Media List", root_path, class: "btn btn-primary" %>
