
<h2>User Summary: <%= @user.username %></h2>
<h3><%= @user.created_at.strftime("%b, %d, %Y") %></h3>

<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @user.votes.each do |vote| %>
        <tr>  
          <td><%= Work.find_by(id: vote.work_id).title %></td>
          <td><%= Work.find_by(id: vote.work_id).creator %></td>
          <td><%= Work.find_by(id: vote.work_id).publication_year %></td>
          <td><%= Work.find_by(id: vote.work_id).category %></td>
          <td><%= vote.date.strftime("%b, %d, %Y") %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</section>

<%= link_to "Back to media ranks", root_path %> 
<%= link_to "See all users", users_path %> 
  