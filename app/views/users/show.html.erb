<main>

  <h2 class="green_text">User Summary: <%= @user.name %></h2>
  <p>Joined site <%= display_date(@user.created_at) %></p>

  <section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
    <table class="table">
      <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
      </thead>

      <tbody>
        <% @user.votes.each do |vote| %>
          <tr>
          <% if vote.work %>
            <td><%= link_to vote.work.title, work_path(id: vote.work_id) %></td>
            <td><%= vote.work.creator %></td>
            <td><%= vote.work.published_year %></td>
            <td><%= vote.work.category %></td>
            <td><%= display_date(vote.created_at) %></td>
          <% end %>
          </tr>
        <% end %>
      </tbody>

    </table>
  </section>

  <a class="btn btn-secondary" href="/users">See all Users</a>
  <a class="btn btn-primary" href="/">Back to Media List</a>

</main>