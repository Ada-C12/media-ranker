<%# like for works show 
http://localhost:3000/works/2%>

<main> 
<h2> Users Summary: <%= link_to @user.username, user_path(@user.id) %></h2>
<p> Joined Site <%= readable_date(@user.created_at)%></p>

<section>
<table class="table">
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted On</th>
        </tr>
      </thead>
      <tbody>
          <% @user.votes.each do |vote| %>
          <% work = vote.work%>
        <tr>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_date %></td>
        <td><%= work.category%></td>
        <td><%= readable_date(vote.created_at) %></td>
        </tr>
        <% end %>
        </tbody>
        </table>
      </section>

      <% link_to "See all Users", users_path %>
      <%= link_to "View all media", root_path %>
      </main>