<main>
  <h2>User Summary: <%= link_to @user.username, user_path(@user.id) %></h2>
  <p>Joined site <%= @user.created_on %></p>
  <section class="user-votes__container">
    <h3 class="user-votes__header">Votes</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Media Title</th>
            <th>Created By</th>
            <th>Published</th>
            <th>Category</th>
            <th>Voted On</th>
          </tr>
        </thead>
        <tbody>
          <% @user.votes.each do |vote| %>
            <tr>
              <td><%= vote.work.title %></td>
              <td><%= vote.work.creator %></td>
              <td><%= vote.work.published %></td>
              <td><%= vote.work.category %></td>
              <td><%= vote.created_on %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </section>
  <%= link_to "See all Users", users_path, class: "btn btn-secondary" %>
  <%= link_to "Back to Media List", works_path, class: "btn btn-primary" %>
</main>
