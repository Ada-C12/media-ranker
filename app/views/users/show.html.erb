<body>
  <section class='pagecontent'>
    <h2>User Summary: <%= link_to @user.username, user_path(@user) %></h2>
    <p>Joined site <%= @user.created_at.strftime("%B %d, %Y") %>


  <section>
      <h2>Votes</h2>
      <table class="table table-hover">
        <thead class="thead">
          <tr>
            <th scope="col">Media Title</th>
            <th scope="col">Created By</th>
            <th scope="col">Published</th>
            <th scope="col">Category</th>
            <th scope="col">Voted On</th>
          </tr>
        </thead>
        <tbody>
          <% @user.votes.each do |vote| %>
            <tr>
              <td><%= link_to vote.work.title, work_path(vote.work) %></td>
              <td><%= vote.work.creator %></td>
              <td><%= vote.work.publication_year %></td>
              <td><%= vote.work.category %></td>
              <td><%= vote.created_at.strftime("%B %d, %Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </section>

  <section>
    <button class="btn btn-primary"><%= link_to "See all Users", users_path %> </button>
    <button class="btn btn-primary"><%= link_to "Back to Media List", root_path %> </button>
  </section>
  </section>
</body>