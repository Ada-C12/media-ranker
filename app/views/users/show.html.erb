<main>
  <h2>User Summary: <%= @user.username %></h2>
  <p>Joined site <%= readable_date(@user.created_at) %></p>

  <section class="user-votes__container">
    <h3 class="user-votes__header">Votes</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted On</th>
        </tr>
      </thead>
      <tbody>

      <% @user.votes.each do |user| %>
        <tr>
          <td>
            <%= link_to user.work.title, work_path(user.work_id) %>
          </td>
          <td>
            <%= user.work.creator %>
          </td>
          <td>
            <%= user.work.publication_year %>
          </td>
          <td>
            <%= user.work.category%>
          </td>
          <td>
            <%= readable_date(user.created_at) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>

  <%= link_to "See all Users", users_path, class:"btn btn-secondary" %>
  <%= link_to "Back to Media List", root_path, class:"btn btn-primary" %>

</main>