<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<h4>Log in</h4>
<%= form_with model: @user, url: login_path do |f| %>
  <%= f.label :user_name %>
  <%= f.text_field :username %>
  
  <%= f.submit "Log in" %>
<% end %>