<main>
  <section>
    <h2><%= @work.title %></h2>
    <p><%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p>Description: <%= @work.description %></p>
    <section>
      <%= button_to "Back to media ranks", root_path, method: :get %>
      <%= button_to "Edit", edit_work_path(@work), method: :get %>
      <%= button_to "Upvote", upvote_work_path(@work.id), method: :post %>
      <%= button_to "Delete", work_path(@work), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
    </section>
  </section>
</main>