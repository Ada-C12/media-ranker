<main>
  <section>
    <h2><%=@work.title%></h2>
    <p>Created by: <%=@work.creator%> </p>
    <p>Published: <%=@work.publication_year%> </p>
    <p> <%=@work.description%> </p>
    <section>
      <%= link_to "Back to media", root_path, class:"btn btn-info" %>
      <%= link_to "Edit", edit_work_path(@work.id), class:"btn btn-info" %>
      <%= link_to "Upvote", work_votes_path(@work.id), method: :post, class:"btn btn-info" %>
      <%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "are U suuure?"}, class:"btn btn-danger" %>
    </section>
   </section> 
</main>