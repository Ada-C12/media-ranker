<h1><%= @work.title %></h1>

<ul>
  <li>Category: <%= @work.category %></li>
  <li>Title: <%= @work.title %></li>
  <li>Creator: <%= @work.creator %></li>
  <li>Publication Year: <%= @work.publication_year %></li>
  <li>Description: <%= @work.creator %></li>
</ul>


<%# buttons %>
<section>
  <button class="btn btn-primary"><%= link_to "Back to Media Ranks", root_path %></button>
  <button class="btn btn-primary"><%= link_to "Edit", edit_work_path(@work)%></button>
  <button class="btn btn-primary"><%= link_to "Upvote needs a path"%></button>
  <button class="btn btn-danger"><%= link_to "Delete #{@work.title}", @work, method: :delete, data: { confirm: "Are you sure you want to delete #{@work.title}?"} %></button>
</section>
