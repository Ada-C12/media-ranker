<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>
    <section>
      <%= link_to "Back to media ranks", root_path, class:"btn btn-primary" %>
      <%= link_to "Edit", edit_work_path, class:"btn btn-primary" %>
      <%# link_to "Upvote", upvote_path, method: :post, class:"btn btn-primary" %>
      <%= link_to 'Delete', work_path, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-primary" %>
    </section>
  </section>
</main>
