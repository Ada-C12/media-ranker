<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.published %></p>
    <p><%= @work.description %></p>
    <section>
      <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
      <%= link_to "Edit", edit_work_path(@work.id), class: "btn btn-primary" %>
      <%= link_to "Upvote", upvote_work_path(@work.id), method: :post, class: "btn btn-primary" %>
      <%= link_to "Delete", work_path(@work.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
    </section>
  </section>
  <section class="works_votes__container">
    <h3 class="works_votes__header"><%= @work.votes.count %> votes for this <%= @work.category.capitalize %></h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
          <tr>
            <td><%= link_to vote.user.username, user_path(vote.user.id) %></td>
            <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</main>
