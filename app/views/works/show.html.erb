<main>
  <section>
    <h2> <%= @work.title %> </h2>
        <p>
          Created by: <%= @work.creator %>
        </p>
        <p>  
          Published: <%= @work.publication_year %>
        </p>
        <p>  
           <%= @work.description %>
        </p>
        <p></p>
      <section>
        <%= link_to "Show all Works", works_path, class: "btn btn-primary" %>
        <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
        <%= link_to "Upvote", upvote_path(@work), method: :post, class: "btn btn-primary" %>
        <%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
      </section>
    </section>

    
    
    <section class="works-votes__container">
      <h3 class="works-votes__header"> <%= @work.votes.count %> Votes for this <%= @work.category.capitalize %> </h3>
    </section>

    <table class="table">
      <thead>
        <tr>
          <th> User </th>
          <th> Date </th>
        </tr>

      </thead>

      <tbody>
        <% @work.votes.each do |vote| %>
          <% user = User.find(vote.user_id) %> 
        <tr>
          <td> <%= link_to user.name, user_path(user.id) %> </td>
          <td> <%= vote.date %> </td>
        </tr>
        <% end %>
      <tbody>
    </table>

  </main>