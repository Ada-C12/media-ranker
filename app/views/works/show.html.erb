<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p> 
    <p><%= @work.description %></p>
    <section>
    <%= link_to "Back to media ranks", root_path, class:"btn btn-primary" %>
    <%= link_to "Edit", edit_work_path( @work.id ), class:"btn btn-primary" %>
    <a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/:id/upvote">Upvote</a>
    <%= link_to "Delete", work_path( @work.id ), method: :delete, data: { confirm: "Are you sure you want to delete this Media?" }, class:"btn btn-danger" %>
  </section>
</section>

