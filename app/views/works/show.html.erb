<h2 class="teal-text"><strong><%= @work.title %></strong></h2>

<p class="black-text">Created by: <%= @work.creator %></p>
<p class="black-text">Published: <%= @work.publication_year %></p>
<p class="black-text"><%= @work.description %></p>

<%= link_to "Back to media ranks", homepages_path, class:"btn btn-primary" %>
<%= link_to "Edit", edit_work_path(@work), class:"btn btn-primary" %> 
<%= link_to "Upvote", upvote_work_path(@work), class:"btn btn-primary" %>
<%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure you want to delete?"}, class:"btn btn-danger" %>


<h3 class="black-text"><strong><%= @work.votes.count %> Votes for this <%= @work.category %></strong></h3>
<section class="media-table">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">User</th>
          <th scope="col">Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
          <tr>
            <td><%= link_to vote.user.name, user_path(vote.user), class: "teal-text" %></td>
            <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</section>