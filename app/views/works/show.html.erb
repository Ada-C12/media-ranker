<main>
  <section>
    <h2><%=@work.title%></h2>
    <p>Created by: <%=@work.creator%> </p>
    <p>Published: <%=@work.publication_year%> </p>
    <p> <%=@work.description%> </p>
    <section>
      <%= link_to "Back to media", root_path, class:"btn btn-info" %>
      <%= link_to "Edit", edit_work_path(@work.id), class:"btn btn-info" %>
      <%= link_to "Upvote", work_votes_path(@work.id), method: :post, class:"btn btn-info" %>
      <%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "are U suuure?"}, class:"btn btn-danger" %>
    </section>
   </section> 
   <section class="user-votes__container">
    <h3 class="user-votes__header">Votes</h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
          <tr>
            <td><%=vote.user.username %> </td>
            <td><%=readable_date(vote.created_at)%> </td>
          </tr>
        <%end %>
      </tbody>
    </table>
</main>