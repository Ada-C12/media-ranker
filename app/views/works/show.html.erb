<section>
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>

  <button class="btn btn-outline-primary"><%= link_to "Back to media ranks", main_path %> </button>
  <button class="btn btn-outline-primary"><%= link_to "Edit", edit_work_path(@work) %> </button>
  <button class="btn btn-outline-primary"><%= link_to "Upvote" %> </button>
  <button class="btn btn-outline-danger"><%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure you would like to delete this work?"} %></button>


  <h2>Votes for this movie:</h2>

</section>