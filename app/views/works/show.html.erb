<h1> <%= @work.name %></h1>
<section class="work-details">
  <p> Created by: <%= @work.creator %> </p>
  <p> Published: <%= @work.publication_year %> </p>
</section>

<section>
  <%= link_to "Back to media ranks" , works_path %>
  <%= link_to "Edit", edit_work_path(@work.id) %>
  <%= link_to "Upvote", create_vote_path(@work.id), method: :create %>
  <%= link_to "Delete", work_path(@work.id), method: :delete %>
</section>

<section class = "votes">
<table>
  <h2><%= @work.votes.count %> Votes for this <%=@work.category %> </h2>
    <theader>
      <tr>
        <td>User</td>
        <td>Date</td>
      </tr>
    </theader>
    <tbody>
      <% @work.votes.each do |vote| %>
          <tr>
            <td><%= link_to User.find_by(id: vote.user_id).username, user_path(vote.user.id) %></td>
            <td><%= vote.created_at %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
  </section>