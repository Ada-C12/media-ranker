<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p> 
    <p><%= @work.description %></p>
    <section>
    <%= link_to "Back to media ranks", root_path, class:"btn btn-primary" %>
    <%= link_to "Edit", edit_work_path( @work.id ), class:"btn btn-primary" %>
    <%= link_to "Upvote", upvote_path(@work.id), method: :post, class:"btn btn-primary" %>
    <%= link_to "Delete", work_path( @work.id ), method: :delete, data: { confirm: "Are you sure you want to delete this Media?" }, class:"btn btn-danger" %>
    </section>
  </section>

  <section class="works-votes__container">
    <h3 class="works-votes__header"><%= @work.votes.length %> Votes for this <%= @work.category.capitalize %></h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>

      <% @work.votes.each do |work| %>
        <tr>
          <td>
            <%= link_to work.user.username, user_path(work.user_id) %>
          </td>
          <td>
            <%= readable_date(work.created_at) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</main>