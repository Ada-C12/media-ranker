<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>
    <section>
      <%= link_to "Back to media ranks", root_path, class:"btn btn-primary" %>
      <%= link_to "Edit", edit_work_path, class:"btn btn-primary" %>
      <%= link_to "Upvote", upvote_path(work_id: @work.id), method: :post, class:"btn btn-primary" %>
      <%= link_to 'Delete', work_path, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger" %>
    </section>
  </section>

  <%# TIFF START HERE %>
  <section class="works-votes__container">
    <h3 class="works-votes__header"><%= @work.votes.count %> Votes for this Album</h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
          <tr>
            <td><%= link_to vote.user.username, user_path(vote.user) %></td>
            <td><%= vote.created_at.to_date %></td>
          </tr>
        <% end %>
      </tbody>
  </section>
</main>
