<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p>Description: <%= @work.description %></p>
    <section class="works-buttons">
      <%= button_to "Back to media ranks", root_path, class: "btn btn-primary mr-2", method: :get %>
      <%= button_to "Edit", edit_work_path(@work), class: "btn btn-primary mr-2", method: :get %>
      <%= button_to "Upvote", work_votes_path(@work.id), class: "btn btn-primary mr-2", method: :post %>
      <%= button_to "Delete", work_path(@work), class: "btn btn-danger mr-2", method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
    </section>

    <section class="works-votes__container">
      <h3 class="works-votes__header"><%= @work.votes.count %> Votes for this <%= @work.category %></h3>
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Date</th>
          </tr>
        </thead>
        <% @work.votes.each do |vote| %>
        <tbody>
          <tr>
            <td><%= link_to vote.user.username, user_path(vote.user) %></td>
            <td><%= readable_date(vote.created_at) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </section>
  </section>
</main>