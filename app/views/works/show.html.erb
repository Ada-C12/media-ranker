<h1> <%= @work.title %> </h1>
  <section>
    <%= link_to "Show all Works", works_path %>
    <%= link_to "Edit", edit_work_path(@work) %>
    <%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure?"} %>
    <%= link_to "Upvote", upvote_path(@work), method: :post %>
  </section>

  <section>
    <ul>
      <li>
        <%= @work.category %>
      </li>
      <li>
        <%= @work.creator %>
      </li>
      <li>  
        <%= @work.publication_year %>
      </li>
      <li>
        <%= @work.description %>
      </li>
    </ul>
  </section>
  
  <section>
    <%= @work.votes.count %> Votes for this <%= @work.category.capitalize %>
  </section>

