<h1>List of Works</h1>
<h2>Albums</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Work.albums_work.each do |work| %>
      <tr>
        <td><%= work.title %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
      </tr>
    <% end %>
  </tbody>
</table>

