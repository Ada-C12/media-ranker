<h2> List of Works </h2>

<section class="media-table">
  <h4> Books </h4>
  <table class="table">
    <thead>
      <tr>
        <th width = "80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Year Released</th>
        <th width="100">Upvote</th>
      </tr>
    </thead>
  <body>
<% books = @works.where(category: "book") %>
<% books = Work.sort_works(books) %>
<% books.each do |book| %>
<tr>
<td><span class="badge badge-pill badge-info"><%=book.votes.length%>
<% if book.votes.length == 1 %>Vote</span>
<% else %>Votes</span>
<%end%></td>
<td> <%= link_to book.title, work_path(book) %> </td>
<td><%= book.creator %></td>
<td><%= book.release_date %></td>
<td><%= button_to 'Upvote', upvote_path(book.id) %></td>
</tr>
<% end %>

</body>
</thead>
</table>
</section>
