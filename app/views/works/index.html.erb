<p id="notice"><%= notice %></p>

<main>
  <h2>List of Works</h2>
  <section>
    <h4>Albums</h4>
    <table>
    <thead>
      <tr></tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @works.each do |work| %>
        <% if work.category = "album"%>
          <th>Category</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <tr>
            <td><%= work.category %></td>
            <td><%= link_to work.title, work_path(work.id) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </section>

