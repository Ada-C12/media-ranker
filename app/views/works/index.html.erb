<h1>List of Works</h1>


<h2>Movies</h2>
<table class="table" >
  <thead>
    <tr>
      <th scope="col">Votes</th>
      <th scope="col">Title</th>
      <th scope="col">Created By</th>
      <th scope="col">Published</th>
      <th scope="col">Upvote</th>
    </tr>
  </thead>
  <tbody>
  <%@movies.each do |movie|%>
    <tr>
      <td><%=movie.votes.count%></td>
      <td><%= link_to movie.title, work_path(movie)%></td>
      <td><%=movie.creator%></td>
      <td><%=movie.publication_year%></td>
      <td><%=link_to "upvote", upvote_path(movie), :method => :post, :class => "btn btn-primary"%></td>
    </tr>
  <%end%>
  </tbody>
</table>


