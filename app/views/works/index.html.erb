<%= render 'nav', work: @work %>

<p id="notice"><%= notice %></p>

<main>
  <h2>List of Works</h2>
  <section>
    <h4>Albums</h4>
    <table>
    <thead>
      <tr></tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @works.each do |work| %>
        <% if work.category = "album"%>
          <tr>
            <td><%= work.category %></td>
            <td><%= work.title %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td><%= link_to 'Show', work %></td>
            <td><%= link_to 'Edit', edit_work_path(work) %></td>
            <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </section>

