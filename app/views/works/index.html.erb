<h1 class="index-header">The Index Action: The place where you get all of the works!</h1>

<section>
  <h2>Books</h2> 
   <table class="table"> 
<th> Votes </th>
<th> Title </th>
<th> Created by</th>
<th> Published </th>
<th>Upvote</th>



<% @books.each do |book| %>
<tr>
<td><%= book.votes.length %></td>
<td><%= book.title %></td>
<td><%= book.creator %></td>
<td><%= book.publication_year %></td>
 <% if Vote.find_by(work_id: book.id, user_id: @user.id) %>
<td><%=  link_to "Un-Upvote" , upvote_path(work_id: book.id, user_id: @user.id), method: :post, class:"btn btn-primary"%></td>
<% else %>
<td>   <%=link_to "Upvote", upvote_path(work_id: book.id, user_id: @user.id), method: :post, class:"btn btn-primary" %></td>        
<%end%>
</tr>
<%end%>
</table>

