<h1>List of Works</h1>

<h3>Albums</h3>
<ul>
  <%@albums.each do |album|%>
    <li><%=link_to album.title, work_path(album.id)%> --- <%=album.creator%> -- <%=album.publication_year%></li>
  <%end%>
</ul>


<h3>Books</h3>
<ul>
  <%@books.each do |book|%>
    <li><%=link_to book.title, work_path(book.id)%> --- <%=book.creator%> -- <%=book.publication_year%></li>
  <%end%>
</ul>


<h3>Movies</h3>
<ul>
  <%@movies.each do |movie|%>
    <li><%=link_to movie.title, work_path(movie.id)%> --- <%=movie.creator%> -- <%=movie.publication_year%></li>
  <%end%>
</ul>

