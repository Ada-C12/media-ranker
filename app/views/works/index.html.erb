<% if @current_user %>
  <%= link_to 'Log Out', logout_path %>
  <% end %>
<% if !@current_user %>
  <%= link_to 'Log In', login_path %>
<% end %>


<h1> All Media </h1>
<%= link_to 'Add New Media Work', new_work_path %>

