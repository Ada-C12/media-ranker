<main>
  <h2>List of Works</h2>

  <% %w(album book movie).each do |category|%>
    <section class="media-table">
      <h4><%= category.capitalize %>s</h4>
      <thead>
        <tr>
          <!--th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th-->
        </tr>
        <div>
          <span>Votes</span>
          <span>Title</span>
          <span>Created By</span>
          <span>Published</span>
          <span>Upvote</span>
        </div>
      </thead>
      <tbody>
          <% Work.list_all_in_category(category).each do |piece| %>
          <tr>
            <!--td>FILL IN LATER WITH VOTES</td>
            <td><%= link_to piece.title, work_path(piece) %></td>
            <td>piece.creator</td>
            <td>piece.publication_year</td>
            <td><%# link_to Upvote, upvote_path(piece), class="btn btn-primary" %>Upvote</td-->
          </tr>
          <div>
            <span>LATER</span>
            <span><%= link_to piece.title, work_path(piece) %></span>
            <span>piece.creator</span>
            <span>piece.publication_year</span>
            <%# upvote_url = "/works/" + piece.id.to_s + "/upvote" %>
            <span><%# link_to "Upvote", upvote_url, method: post, class:"btn btn-primary" %>Upvote</span>
          </div>
          <% end %>
      </tbody>
    </section>
  <% end %>

  <%= link_to "View top media", root_path, class:"btn btn-secondary" %>
  <%= link_to "Add a new work", new_work_path, class:"btn btn-primary" %>
</main>
