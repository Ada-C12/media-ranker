<section>
  <h2>Albums</h2>
  <ul>
  <ul>
  <% @albums.each do |album| %>
    <li><%= album.votes.length%></li>
    <li><%= link_to album.title, work_path(album.id)%> </li>
    <li><%= album.creator %></li>
    <li><%= album.publication_year %></li>
    <li><button type="button" class="btn btn-primary"><%= link_to "Upvote"%></button></li>
  <% end %>
  </ul>
</section>

