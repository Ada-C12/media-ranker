<h2>List of Works</h2>

<section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% Work.votes_descending("album").each do |work| %>
          <tr>
            <td><%= Vote.where(work_id: work.id).count %></td>
            <td><a href="/works/<%= work.id %>"> <%= work.title %>
            </a></td>
            <td><%= work.creator %></td>
            <td><%= work.publication %></td>
            <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/<%= work.id %>/upvote">Upvote</a></td>
             <%end%>
          </tr>
        </tbody>
    </table>
  </section>

