<main>
<h2>List of Works</h2>
  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </tr>
      </thead>

      <tbody>
        <% @all_movies.each do |piece|%>
        <tr>
          <td><%= piece.votes_earned %></td>
          <td><%= piece.title %>PLUS link</td>
          <td><%= piece.creator %></td>
          <td><%= piece.published_year %></td>
          <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/homepages/nope_path">UPVOTE BUTTON</a></td>
        </tr>
        <% end %>
      </tbody>

    </table>

