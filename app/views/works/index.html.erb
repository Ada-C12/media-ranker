<main>
  <h2>List of Works</h2>

  <section class="media-table">
    <h4>Movies</h4>
    <table class="table">
      <thead>
        <tr>
          <th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th>
        </tr>
      </thead>
      <tbody>
          <% @works.each do |work| %>
            <tr>
              <td>__</td>
              <td><%=link_to work.title, work_path( work.id ) %></td>
              <td><%=work.creator%></td>
              <td><%=work.publication_year%></td>
              <td><a class="btn btn-primary">Upvote</a></td>
              <% if false %>
                <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/506/upvote">Upvote</a></td>
              <% end %>
            </tr>
          <% end %>
      </tbody>
    </table>
  </section>

  <a class="btn btn-secondary" href="/">View top media</a>
  <a class="btn btn-primary" href="/works/new">Add a new work</a>

  </main>