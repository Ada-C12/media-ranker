<body>
  <main>
    <h2>List of Works</h2>

  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <%# <th width="80">Votes</th> %>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
          <%# <td>3</td> %>
          <% @albums.each do |album| %>
          <tr>
            <td><%= album.title %></td>
            <td><%= album.creator %></td>
            <td><%= album.publication_year%></td>
            <%# <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/476/upvote">Upvote</a></td> %>
          </tr>
          <%end%>
      </tbody>
    </table>
  </section>
  
  <section class="media-table">
    <h4>Books</h4>
    <table class="table">
      <thead>
        <tr>
          <%# <th width="80">Votes</th> %>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
          <%# <td>3</td> %>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.creator %></td>
            <td><%= book.publication_year%></td>
          </tr>
          <%end%>
      </tbody>
    </table>
  </section>
  
  <section class="media-table">
    <h4>Movies</h4>
    <table class="table">
      <thead>
        <tr>
          <%# <th width="80">Votes</th> %>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
          <%# <td>3</td> %>
          <% @movies.each do |movie| %>
          <tr>
            <td><%= movie.title %></td>
            <td><%= movie.creator %></td>
            <td><%= movie.publication_year%></td>
          </tr>
          <%end%>
      </tbody>
    </table>
  </section>

    <a class="btn btn-secondary" href="/">View top media</a>
    <a class="btn btn-primary" href="/works/new">Add a new work</a>
  </main>
</body>
