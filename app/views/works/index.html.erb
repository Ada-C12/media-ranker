<main> 
<h2>List of Works</h2>
<section class="media-table">
 <h4> Albums</h4>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Votes</th>
    <th>Created By</th>
    <th>Published</th>
     <th>Upvote</th>

  </tr>

   <% @albums.each do |work| %>
  <tr>
    <td><%= link_to work.title, work_path(work.id) %></td>
    <td><%=work.votes.length%></td>
    <td><%= work.creator %></td>
    <td> <%= work.publication_year%></td>
    <td> Upvote</td>

  </tr>
  <% end %>
</table>
