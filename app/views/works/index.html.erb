<h2>List of Works</h2>
<% @all_works_categorized.keys.each do |category| %>
<section class="media-table">
  <h4><%= category.capitalize %></h4>
  <table class="table">
    <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @all_works_categorized[category].each do |work| %>
      <tr>
        <td>VOTES(NOT HERE YET)</td>
        <td><%= work.title %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td>
          UPVOTE(NOT HERE YET)<%# link_to "UPVOTE(NOT HERE YET)", vote_path(work.id), method: :post %>
        </td>
      </tr>    
      <% end %>
      
    </tbody>
  </table>

</section>
<% end %>
