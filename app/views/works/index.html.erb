<h1> List of Works </h1>
<table>
  <h2 class = "type-of-work"> Albums </h2>
    <theader>
      <tr class = "table-headers">
        <td>Votes</td>
        <td>Title</td>
        <td>Created By</td>
        <td>Published</td>
        <td>Upvote</td>
      </tr>
    </theader>
    <tbody>
      <% @works.each do |work| %>
        <% if work.category == "album"%>
          <tr>
            <td><%= Vote.where(work_id: work.id).count%></td>
            <td><%= link_to work.name, work_path(work.id) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td class = "upvote"> <%= button_to "Upvote", create_vote_path(work.id), method: :create %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

