<body>
  <main>
    <h2>List of Works</h2>
    <section class="media-table">
      <h4>Albums</h4>
      <table class="table">
        <thead>
          <tr>
            <th width="80">Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th width="100">Published</th>
            <th width="100">Upvote</th>
          </tr>
        </thead>
        <tbody>
          <% @works.each do |work| %>
            <% if work.category == "album" %>
              <tr>
              <td> VOTES </td>
              <td> <%= link_to work.title, work_path(work.id) %> </td>
              <td> <%= work.creator %> </td>
              <td> <%= work.publication_year %> </td>
              <td> Upvote </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </section>

    <section class="media-table">
      <h4>Books</h4>
      <table class="table">
        <thead>
          <tr>
            <th width="80">Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th width="100">Published</th>
            <th width="100">Upvote</th>
          </tr>
        </thead>
        <tbody>
            <% @works.each do |work| %>
              <% if work.category == "book" %>
                <tr>
                <td> VOTES </td>
                <td> <%= link_to work.title, work_path(work.id) %> </td>
                <td> <%= work.creator %> </td>
                <td> <%= work.publication_year %> </td>
                <td> Upvote </td>
                </tr>
              <% end %>
            <% end %>
        </tbody>
      </table>
    </section>

    <section class="media-table">
      <h4>Movies</h4>
      <table class="table">
        <thead>
          <tr>
            <th width="80">Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th width="100">Published</th>
            <th width="100">Upvote</th>
          </tr>
        </thead>
        <tbody>
          <% @works.each do |work| %>
            <% if work.category == "movie" %>
              <tr>
              <td> VOTES </td>
              <td> <%= link_to work.title, work_path(work.id) %> </td>
              <td> <%= work.creator %> </td>
              <td> <%= work.publication_year %> </td>
              <td> Upvote </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </section>

    <a class="btn btn-secondary" href="/">View top media</a>
    <a class="btn btn-primary" href="/works/new">Add a new work</a>
  </main>
</body>
