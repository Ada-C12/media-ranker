
<main class="container">
  <section>
    <h2 class="text-green">List of Works</h2>
    </section>

<%# List for albums %>
  <section class="spotlight">
    <h4>Books</h4>
    <table class="table">
      <thead>
        <tr>
      <th scope="col"width=80>Votes</th>
      <th scope="col">Title</th>
      <th scope="col">Created By</th>
      <th scope="col"width=100>Published</th>
      <th scope="col"width=100>Upvote</th>
    </tr>
    </thead>
        <tbody>
   
     <% @all_books.each do |book|%>
      <tr>  
      <td><%=book.votes.count%></td>
      <td><%= link_to book.title, work_path(book.id)%></td>
      <td><%=book.creator%></td>
      <td><%=book.publication_year%></td>
        <td><%= button_to "upvote", upvote_work_path(book.id), method: :post%></td>
      </tr>
    <%end%>
 </tbody>
  </table>
</section>
