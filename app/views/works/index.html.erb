<h1>List of Works</h1>
<% @categories.each do |category| %>
  <table>
    <h2><%= category.capitalize %></h2>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    <% @works.media_sort(category).each do |work| %>
    <tr>
      <td><%=  work.votes.count %></td>
      <td><%= link_to work.title, work_path(work.id) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= link_to "Upvote", work_votes_path(work.id), method: :post %></td>
    </tr>
    <% end %>
  </table>
<% end %>
