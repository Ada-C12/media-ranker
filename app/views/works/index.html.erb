<main class="container">
  <section>
    <h2 class="text-green">List of Works</h2>
  </section>
  <%# List for albums %>
  <section class="spotlight">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th scope="col" width=80>Votes</th>
          <th scope="col" >Title</th>
          <th scope="col">Created by</th>
          <th scope="col" width=100>Published</th>
          <th scope="col" width=100>Upvote</th>
          <tr>
          </thead>
          <tbody>
            <% @albums.each do |album| %>
              <tr>
                <td><%= album.votes.length %></td>
                <td><%= link_to album.title, work_path(album.id) %></td>
                <td><%= album.creator %></td>
                <td><%= album.publication_year %></td>
                <td><%= link_to "Upvote", work_votes_path(album.id), method: :post, class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
      <%# end of list of albums %>
      <%# List for books %>
      <section class="spotlight">
        <h4>Books</h4>
        <table class="table">
          <thead>
            <tr>
              <th scope="col" width=80>Votes</th>
              <th scope="col">Title</th>
              <th scope="col">Created by</th>
              <th scope="col" width=100>Published</th>
              <th scope="col" width=100>Upvote</th>
              <tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td><%= book.votes.length %></td>
                    <td><%= link_to book.title, work_path(book.id) %></td>
                    <td><%= book.creator %></td>
                    <td><%= book.publication_year %></td>
                    <td><%= button_tag "Upvote", action: "new", class: "btn btn-primary" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </section>
          <%# end of list of books %>
          <%# List for movies %>
          <section class="spotlight">
            <h4>Movies</h4>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" width=80>Votes</th>
                  <th scope="col">Title</th>
                  <th scope="col">Created by</th>
                  <th scope="col" width=100>Published</th>
                  <th scope="col" width=100>Upvote</th>
                  <tr>
                  </thead>
                  <tbody>
                    <% @movies.each do |movie| %>
                      <tr>
                        <td><%= movie.votes.length %></td>
                        <td><%= link_to movie.title, work_path(movie.id) %></td>
                        <td><%= movie.creator %></td>
                        <td><%= movie.publication_year %></td>
                        <td><%= button_tag "Upvote", action: "new", class: "btn btn-primary" %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </section>
              <%# end of list of movies %>
              <section>
                <%= link_to "View top media", root_path, class: "btn btn-secondary" %>
                <%= link_to "Add a new work", new_work_path, class: "btn btn-primary" %>
              </section>
            </main>
