<main>
  <h2>List of Works</h1>
  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% albums = @works.where(category: "album") %>
        <% albums.each do |album| %>
          <tr>
            <td>TBD</td>
            <td><%= link_to album.title, work_path(album.id)%></td>
            <td>album.creator</td>
            <td>album.publication_year</td>
            <td>TBD Link</td>
          </tr>
        <% end %>
      </tbody>
