<main>
  <h2>List of Works</h2>

  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @albums.sort_by{|album| album.votes.length}.reverse.each do |album| %>
        <tr>
          <td><%= Vote.where(work_id: album.id).length %></td>
          <td><%= link_to album.title, work_path(album.id), method: :get %></td>
          <td><%= album.creator %></td>
          <td><%= album.publication_year %></td>
          <td><button type="button" class="btn btn-primary"><%= link_to "Upvote", upvote_work_path(album.id), method: :post %></button></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>

