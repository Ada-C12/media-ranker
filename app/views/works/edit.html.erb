<h2>Edit this Album</h2>
<section>

<%= form_with model: @work do |f| %>

  
  <%= f.label :category %>
  <%= f.select :category, ['album', 'book', 'movie'], {}, {class: "form-control"} %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "Update work", class: "btn btn-primary" %>

<% end %>