<%= form_with model: @work, class: 'edit-media' do |f| %>
<p>Please provide the following information to update your media in our database:</p>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

   <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.submit "Update media", class: "media-button" %>

<% end %>
