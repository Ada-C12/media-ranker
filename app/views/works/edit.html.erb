<section class="alert__container">
<% if @work.errors.any? %>
<div class="alert alert-warning">
<span> A problem occurred: Could not create <%=@work.category%></span>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
</div>
</section>
<main>
<h2>Edit This <%=@work.category.capitalize%></h2>

<%= render partial: "form", locals: { submit_button_label: "Update Work" } %>
</main>