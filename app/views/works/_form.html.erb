
  <%= form_with model: @work, class: "form" do |f| %>
<section>
    
    
    <%= f.label :category %><br>
    <%= select_tag(:category, raw('<option value="Album">Album</option><option value="Book">Book</option><option value="Movie">Movie</option>')) %>
    <br>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <br>
    <%= f.label :creator %><br>
    <%= f.text_field :creator %>
    <br>
    <%= f.label :publication_year %><br>
    <%= f.text_field :publication_year %>
    <br>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
    <br>
    <%= f.submit "#{action_name} Work", class: "btn btn-primary" %>
</section>
<% end %>
