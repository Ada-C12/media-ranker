<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @work, class: "form-group" do |f| %>
  <h2 class="header form_header"><%= action_phrase %></h2>

  <div class="form-group">
    <%= f.label :category %>
    <%# https://stackoverflow.com/questions/4081907/ruby-on-rails-form-for-select-field-with-class %>
    <%= f.select :category, ["movie", "book", "album"], {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :creator %>
    <%= f.text_field :creator, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :published_date %>
    <%# the oldest known printed book is the Gutenberg Bible from 1454 %>
    <%= f.date_select :published_date, {start_year: 1454, discard_day: true, discard_month: true}, {class: "form-control"} %>
  </div>
  
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "#{action_name} Work", class: "btn btn-primary" %>
<% end %>