<h2><%= verb %> <%= @work.category %></h2>

<%= form_for @work do |f| %>
  <div class="form-group">
    <label>Category:</lable>  
    <select class="form-control">
      <%= f.select :category, [['movie'], ['album'], ['book']] %>
    </select>
  </div>

  <div class="form-group">
    <label>Title:</label> 
    <input class="form-control">
      <%= f.text_field :title %>
    </input>
  </div>

  <div class="form-group">
    <label>Creator:</label>
    <span class="form-control">
      <%= f.text_field :creator %>
    </span>

  <div class="form-group">
    <label>Publication Year</label>

      <span class="form-control"><%= f.text_field :publication_year, type: :number %></span>
    
  </div>

  <div class="form-group">
  Description : <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <button class="btn btn-primary">
      <%= f.submit action_name %>
    </button>
  </div>
<% end %>
</div class>
