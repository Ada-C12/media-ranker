<%= form_with model: @work do |f| %>
  <fieldset>
    <%= f.label :category %>
    <%= f.select :category, Work.categories.map {|w| [w, w]} %>
    <%= f.label :title %>
    <%= f.text_field :title %>  
    <%= f.label :creator %>
    <%= f.text_field :creator %>
    <%= f.label :published %>
    <%= f.text_field :published %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit (confirm), class: "btn btn-primary" %>
  </fieldset>
<% end %>
