<h2><%= head_label %></h2>
<section>
  <%= form_with model: @work do |f| %>
    
    <%= f.label :category %>
    <%# f.collection_select :category, ["album", "book", "movie"], ["album", "book", "movie"], ["album", "book", "movie"] %>
    <%= f.select :category, [["album","album"], ["book","book"], ["movie","movie"]] %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit submit_name %>
  <% end %>
</section>

