<h1> <%= action_name %> Work </h1>

<ul>
  <%= form_with model: @work do |f| %>
    <li>
      <%= f.label "Title:" %>
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label "Category:" %>
      <%= f.select :category, ["album", "book", "movie"] %>
    </li>

    <li>
      <%= f.label "Creator:" %>
      <%= f.text_field :creator %>
    </li>

    <li>
      <%= f.label "Publication year:" %>
      <%= f.text_field :publication_year %>
    </li>

    <li>
      <%= f.label "Description:" %>
      <%= f.text_field :description %>
    </li> 

    <li>
      <%= f.submit "#{verb_name}" %>
    </li>
  <% end %>
</ul>





