<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Edit and Create form</title>
  </head>

<body>
  <main>
    <% if @work.errors.any? %>
      <section class="alert alert-danger">
      <h1>Errors</h1>
      <ul>
        <% @work.errors.each do |key, message| %>
          <li><strong><%= key.capitalize %></strong> <%= message %></li>
        <% end %>
      </ul>
      </section>
    <% end %>


<main>
  <h2><%= verb_name.capitalize %> your work</h2>
  <section>
   
    <%= form_with model: @work, class: "work-input" do |f| %>
      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category, [nil, "album", "movie", "book"], class: "form-control" %></label>
      </div>
      
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :creator %>
        <%= f.text_area :creator, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :publication_year%>
        <%= f.text_area :publication_year, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :description%>
        <%= f.text_area :description, class: "form-control"%>
      </div>

      <%= f.submit "#{action_name} Work", class: "work-button" %>
    <% end %>

      </section>
    </main>
  </body>
</html>


