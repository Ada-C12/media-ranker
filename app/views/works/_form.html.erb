<p>Add a new Work</p>

<%= form_with model: @work, class: 'create-work' do |f| %>
  <div class="form-group">
  <%= f.label :category %><br>
  <%= f.select :from, ['album', 'book','movie']%>
  </div>

  <div class="form-group">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
   </div>

  <div class="form-group">
  <%= f.label :creator %><br/>
  <%= f.text_field :creator %>
  </div>

  <div class="form-group">
  <%= f.label :publication_year %><br/>
  <%= f.text_field :publication_year %>
   </div>

  <div class="form-group">
  <%= f.label :description %><br/>
  <%= f.text_field :description %>
   </div>
  

  <%= f.submit "#{action_name} Work", class: "Work-button" %>

<% end %>

 