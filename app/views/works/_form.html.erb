<p>Please provide the following information to <%= verb_name %> your work  our database:</p>

   <% if @work.errors.any? %>
      <% @work.errors.each do |key, message| %>
        <li>
          <strong><%= key.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
    <% end %>

<%= form_with model: @work, class: "work-input" do |f| %>
  <%= f.label :category %>
  <%= f.select :category, [nil, "album", "movie", "book"] %>

  <%= f.label :title %>
  <%= f.text_area :title %>

  <%= f.label :creator %>
  <%= f.text_area :creator %>

  <%= f.label :publication_year%>
  <%= f.text_area :publication_year%>

  <%= f.label :description%>
  <%= f.text_area :description%>

  <%= f.submit "#{action_name} Work", class: "work-button" %>

<% end %>
