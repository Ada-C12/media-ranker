<% if @work.errors.any? %>
  <p>Please fix the following...</p>
  <ul>
  <% @work.errors.each do |error, msg|%>
    <li><%= error %>: <%= msg %></li>
  <% end %>
  </ul>
<% end %>


<%= form_with model: @work do |f| %>

  <div class="form-group">
    <label><%= f.label :category %></label>
    <select class="form-control" name="work[category]">
      <option value="album">album</option>
      <option value="book">book</option>
      <option value="movie">movie</option>
    </select>
  </div>

  <div class="form-group">
    <label><%= f.label :title %></label>
    <input class="form-control" name="work[title]">
  </div>


  <div class="form-group">
    <label><%= f.label :creator %></label>
    <input class="form-control" name="work[creator]">
  </div>


  <div class="form-group">
    <label><%= f.label :description %></label>
    <textarea class="form-control" name="work[description]"></textarea>
  </div>

  <input class="btn btn-primary" <%= f.submit submit_button_label%> 


<% end %>