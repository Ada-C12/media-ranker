<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2 class="teal-text"><strong><%= title_action %></strong></h2>

<%= form_with model: @work do |f| %>

  <div class="form-group"><%= f.label :category %>
  <br>
  <%= f.select :category, ['album', 'book', 'movie']%></div>
  
  <div class="form-group"><%= f.label :title %>
  <br>
  <%= f.text_field :title %></div>

  <div class="form-group"><%= f.label :creator %>
  <br>
  <%= f.text_field :creator %></div>

  <div class="form-group"><%= f.label :publication_year %>
  <br>
  <%= f.text_field :publication_year %></div>

  <div class="form-group"><%= f.label :description %>
  <br><%= f.text_field :description %>
  </div>

  <div class="btn btn-primary"><%= f.submit "#{verb_name} Work" %></div>
<% end %>

