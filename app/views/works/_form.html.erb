<% if @work.errors.any? %>
  <p>Please fix the following...</p>
  <ul>
  <% @work.errors.each do |error, msg|%>
    <li><%= error %>: <%= msg %></li>
  <% end %>
  </ul>
<% end %>


<%= form_with model: @work do |f| %>

  <%= f.label :category %>
  <%= f.select :category, ['Album', 'Book', 'Movie'] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>
    
  <%= f.submit "Update Work" %> 

<% end %>