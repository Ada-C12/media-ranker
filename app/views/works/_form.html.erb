<% if @work.errors.any? %>
  <h1>Errors</h1>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<p>Please provide the following information to <%= verb_name %> a work to our database:</p>

<%= form_with model: @work, class: 'create-work' do |f| %>
  <%= f.label :category %>
  <%= f.select :category, ['Album', 'Book', 'Movie']%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <%= f.label :publication_year %>
  <%= f.number_field :publication_year, :max => 9999, :min => 0000 %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit "Save Work" %>
<% end %>
