  <% if @work.errors.any? %>
    <section class="alert alert-danger">
      <h1>Errors</h1>
      <ul>
        <% @work.errors.each do |column, message| %>
          <li>
            <strong><%= column.capitalize %></strong> <%= message %>
          </li>
        <% end %>
      </ul>
      </section>
  <% end %>

<p>Please provide the following information to <%= verb_name %> your work to our database:</p>

<%= form_with model: @work do |f| %>
  <%= f.label :category %>
  <%= f.text_area :category %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator  %>
  <%= f.text_field :creator %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :publication_date %>
  <%= f.number_field :publication_date %>

  <%= f.submit "#{action_name} work", class: "work-button" %>

<% end %>
