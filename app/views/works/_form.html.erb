<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<p>Please provide the following information to <%= verb_name %> a work:</p>

<%= form_with model: @work do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :category %>
  <%= f.select :category, ['album', 'book', 'movie']%> 

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "#{action_name} Work" %>
<% end %>

