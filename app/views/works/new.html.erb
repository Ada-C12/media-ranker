<main>
<%= form_with model: @work, class: 'create-work' do |f| %>
<p>Please provide the following information to add a new work to our database:</p>

<div class="form-group">
  <%= f.label :category %>
  <%= f.text_field :category %>
</div>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control"%>
  </div>
<div class="form-group">
  <%= f.label :creator %>
  <%= f.text_field :creator, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.submit "Add Work", class: "work-button" %>
<% end %>
</div>

<%= link_to "Home", root_path() %>

<main>