<%# form_with is a view helper that will generate the proper form for us and will help us hook into the other controller actions %>
<h2> Add a new work </h2>
<%= form_with model: @work do |f| %>
  <% @categories = ["album", "movie", "book"]%>
  <div class="form-group">
    <%= f.label :category%>
    <%= f.select :category, @categories.map{ |category| [category] }, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title%>
  </div>
  <div class="form-group">
    <%= f.label :creator %>
    <%= f.text_field :creator%>
  </div>
  <div class="form-group">
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year%>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description%>
  </div>
  <%= f.submit "Create Work", class: "btn btn-info" %>
<% end %>
</div>