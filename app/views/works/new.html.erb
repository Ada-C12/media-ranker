<main>
  <h2>Add a new work</h2>
  <%= form_with model: @work do |f| %>
    <fieldset>
      <%= f.label :category %>
      <%= f.text_field :category %>
      <%= f.label :title %>
      <%= f.text_field :title %>  
      <%= f.label :creator %>
      <%= f.text_field :creator %>
      <%= f.label :published %>
      <%= f.text_field :published %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.submit "Create Work", class: "btn btn-primary" %>
    </fieldset>
  <% end %>
</main>
