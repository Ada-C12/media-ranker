<%= form_with model: @work, class: 'create-work' do |f| %>
<h1>Add a new work:</h1>

  <%= f.label :category %>
  <%= f.select :category, options_for_select(["album", "movie", "book"]) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator%>
  <%= f.text_field :creator%>

  <%= f.label :publication_year%>
  <%= f.text_field :publication_year%>

  <%= f.label :description%>
  <%= f.text_field :description%>

  <%= f.submit "Create Work", class: "work-button" %>
<% end %>

